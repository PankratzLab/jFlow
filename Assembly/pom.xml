<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.genvisis</groupId>
		<artifactId>pom-genvisis</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>Assembly</artifactId>
	<version>v0.1.8</version>
	<packaging>pom</packaging>

	<description>Build the complete Genvisis executable jar, with dependencies.</description>

	<properties>
		<outname>genvisis</outname>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.genvisis</groupId>
			<artifactId>Genv-experimental</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<finalName>${outname}</finalName>
					<appendAssemblyId>false</appendAssemblyId>
					<archive>
						<manifest>
							<mainClass>org.genvisis.cnv.Launch</mainClass>
						</manifest>
						<manifestEntries>
							<Implementation-Version>${project.version}</Implementation-Version>
							<Compile-Time>${timestamp}</Compile-Time>
							<Build-Type>Development</Build-Type>
							<Copyright>(c)2009-2016 Nathan Pankratz, GNU General Public License, v2</Copyright>
						</manifestEntries>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>chmod-jar</id>
						<phase>package</phase>
						<configuration>
							<target>
								<chmod file="${project.build.directory}/${outname}.jar" perm="ugo+rx"/>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>upload-genvisis</id>
			<activation>
				<property>
					<name>genv.upload.path</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>upload-genvisis</id>
								<phase>package</phase>
								<configuration>
									<target>
										<exec dir="${project.basedir}" executable="${genv.upload.exe}" failonerror="true">
											<arg value="${project.build.directory}/${outname}.jar"/>
											<arg value="${genv.upload.path}"/>
										</exec>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>copy-genvisis</id>
			<activation>
				<property>
					<name>genv.copy.path</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-genvisis</id>
								<phase>package</phase>
								<configuration>
									<target>
										<copy todir="${genv.copy.path}" file="${project.build.directory}/${outname}.jar" />
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
